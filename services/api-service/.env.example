# Server Configuration
PORT=3007
NODE_ENV=development
LOG_LEVEL=info

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017/grub-api

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka Configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=api-service
KAFKA_GROUP_ID=api-service-group

# Kafka Topics
API_KEY_CREATED_TOPIC=api-key-created
API_KEY_DELETED_TOPIC=api-key-deleted
API_KEY_UPDATED_TOPIC=api-key-updated

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_STANDARD_TIER=100
RATE_LIMIT_PREMIUM_TIER=500
RATE_LIMIT_ENTERPRISE_TIER=1000

# API Documentation
SWAGGER_TITLE=Grub API Service
SWAGGER_DESCRIPTION=API Gateway and Management Service for Grub
SWAGGER_VERSION=1.0.0
SWAGGER_SERVER_URL=http://localhost:3007