# Server configuration
PORT=3005
NODE_ENV=development

# MongoDB configuration
MONGO_URI=mongodb://localhost:27017/grub-creation

# JWT configuration
JWT_SECRET=your-secret-key-change-in-production

# Kafka configuration
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=creation-service
KAFKA_GROUP_ID=creation-service-group

# Topics
PRODUCT_CREATED_TOPIC=product-created
PRODUCT_UPDATED_TOPIC=product-updated
PRODUCT_DELETED_TOPIC=product-deleted
BUNDLE_CREATED_TOPIC=bundle-created
BUNDLE_UPDATED_TOPIC=bundle-updated
CATEGORY_CREATED_TOPIC=category-created
CATEGORY_UPDATED_TOPIC=category-updated
BUSINESS_ONBOARDED_TOPIC=business-onboarded
BUSINESS_UPDATED_TOPIC=business-updated

# Redis configuration (if needed)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Logging
LOG_LEVEL=info

# File storage (for product images)
STORAGE_TYPE=local # or 's3', 'gcs', etc.
LOCAL_STORAGE_PATH=./uploads
# For cloud storage (if used)
# CLOUD_STORAGE_BUCKET=your-bucket-name
# CLOUD_STORAGE_REGION=your-region